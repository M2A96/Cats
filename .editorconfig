# EditorConfig helps maintain consistent coding styles
# for multiple developers working on the same project.
# See https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# Kotlin specific settings
[*.{kt,kts}]
ktlint_code_style = android_studio
ktlint_standard = enabled
ktlint_experimental = enabled

# Disable wildcard imports rule
ktlint_standard_no-wildcard-imports = disabled

# Disable max line length rule (handled by Android Studio)
ktlint_standard_max-line-length = disabled

# Disable final newline rule
ktlint_standard_final-newline = disabled

# Disable trailing comma rule
ktlint_standard_trailing-comma = disabled

# Disable function signature rule
ktlint_standard_function-signature = disabled

# XML files
[*.xml]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2